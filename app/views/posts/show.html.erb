
<%= link_to "#{@post.user.username}", post_path(@post.user) %>
<%= @post.title %>
<%= @post.body %>

	<%= form_for @post, data: { confirm: 'Are you sure?' }, remote: true do |f| %>

		<%= f.label :title %>
		<br>
		<%= f.text_field :title %>
		<br>
		<%= f.label :body %>
		<br>
		<%= f.text_area :body %>
		<br>
		<%= f.submit :update%>

	<% end %>

		<%= link_to "Edit Post", edit_post_path %>
		
		<%= link_to "Delete", post_path(@post), method: :delete %>